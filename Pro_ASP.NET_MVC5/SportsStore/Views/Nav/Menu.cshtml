@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-block " + (ViewBag.SelectedCategory == null ? "btn-primary btn-lg " : "btn-light btn-lg ") })

@foreach(var link in Model)
 {
    @Html.RouteLink(link, new { controller = "Product", action = "List", category = link, page = 1},
    new { @class = "btn btn-block "  + (link == ViewBag.SelectedCategory ? "btn-primary btn-lg " : "btn-light btn-lg ") })
 }